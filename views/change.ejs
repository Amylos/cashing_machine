<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Change Result</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
    />
  </head>

  <style>
    * {
      font-family: Arial, sans-serif;
      font-size: 1.1rem;
    }

    .table-container {
      max-width: 700px;
      margin: auto;
      margin-top: 50px;
    }

    .table th {
      background-color: #0d6efd;
      color: white;
    }

    .btn-back {
      display: block;
      margin: 40px auto 0;
      width: fit-content;
    }

    body {
      background-color: #f8f9fa;
      padding: 40px;
    }
  </style>

  <body>
    <div class="container text-center">
      <h1 class="mb-4 text-primary">Change Given by the Cash Register</h1>

      <div class="table-container">
        <table
          class="table table-bordered table-striped align-middle shadow-sm"
        >
          <thead>
            <tr>
              <th scope="col">Coin / Bill (€)</th>
              <th scope="col">Quantity</th>
            </tr>
          </thead>
          <tbody>
            <% for (const key in changeToGive) { %>
            <tr>
              <% let displayKey = key.includes("point") ? key.replace("point",
              ".") : key; %>
              <td><%= displayKey %></td>
              <td><%= changeToGive[key] %></td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>

      <a href="/payment" class="btn btn-primary btn-back">← Back to Payment</a>
    </div>
  </body>
</html>
